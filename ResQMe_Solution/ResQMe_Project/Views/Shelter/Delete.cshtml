@model ResQMe.ViewModels.Shelter.ShelterDetailsViewModel

<h2 class="text-danger mb-4">Delete Shelter</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="card mb-3" style="max-width: 700px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded-start"
                 style="height:250px; object-fit:cover;" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5>@Model.Name</h5>

                <p>
                    <strong>City:</strong> @Model.City <br />
                    <strong>Address:</strong> @Model.Address <br />
                    <strong>Phone:</strong> @Model.Phone <br />
                    <strong>Email:</strong> @Model.Email
                </p>

                <p class="text-danger">
                    Are you sure you want to delete this shelter?
                </p>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>

                    <a asp-action="Index" class="btn btn-secondary">
                        Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
