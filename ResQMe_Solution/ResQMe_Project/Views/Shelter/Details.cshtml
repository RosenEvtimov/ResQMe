@model ResQMe.ViewModels.Shelter.ShelterDetailsViewModel

<div class="container mt-4">

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded"
                 style="height:400px; object-fit:cover;" />
        </div>

        <div class="col-md-6">
            <h2>@Model.Name</h2>

            <p>
                <strong>City:</strong> @Model.City <br />
                <strong>Address:</strong> @Model.Address <br />
                <strong>Phone:</strong> @Model.Phone <br />
                <strong>Email:</strong> @Model.Email
            </p>

            <p>@Model.Description</p>

            <a asp-action="Index" class="btn btn-secondary mt-3">
                Back to list
            </a>
        </div>
    </div>

    <hr />

    <h3>Available Animals</h3>

    @if (!Model.Animals.Any())
    {
        <div class="alert alert-info">
            No animals currently available in this shelter.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var animal in Model.Animals)
            {
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <img src="@animal.ImageUrl"
                             class="card-img-top"
                             style="height:150px; object-fit:cover;" />

                        <div class="card-body">
                            <h6>@animal.Name</h6>
                            <p>
                                Age: @animal.Age <br />
                                Gender: @animal.Gender
                            </p>

                            <a asp-controller="Animal"
                               asp-action="Details"
                               asp-route-id="@animal.Id"
                               asp-route-fromShelterId="@Model.Id"
                               class="btn btn-primary btn-sm">
                                View
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>