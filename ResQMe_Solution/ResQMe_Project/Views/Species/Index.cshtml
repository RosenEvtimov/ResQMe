@model IEnumerable<ResQMe.ViewModels.Species.SpeciesListViewModel>

<h2 class="mb-4">Species</h2>

<a asp-action="Add" class="btn btn-success mb-3">Add Species</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width:200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var species in Model)
        {
            <tr>
                <td>@species.Name</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@species.Id"
                       class="btn btn-warning btn-sm">
                        Edit
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@species.Id"
                       class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>